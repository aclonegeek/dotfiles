;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/vegabar]
; TODO(randy): Fetch monitor automagically!
monitor = ${env:MONITOR:eDP1}
width = 100%
